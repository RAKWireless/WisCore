#!/usr/bin/env bash

WRAPPER_INCLUDEDIR="${WRAPPER_INCLUDEDIR:=-I${STAGING_DIR:-/home/swt/workspace/work/WisCore-SDK/wiswrt/15.05-rak-rc2/staging_dir/target-mipsel_24kec+dsp_uClibc-0.9.33.2}/usr/include/uClibc++/}"
WRAPPER_LIBDIR="${WRAPPER_LIBDIR:=-L${STAGING_DIR:-/home/swt/workspace/work/WisCore-SDK/wiswrt/15.05-rak-rc2/staging_dir/target-mipsel_24kec+dsp_uClibc-0.9.33.2}/lib/}"

WRAPPER_OPTIONS=""
WRAPPER_LIBS="-lc -lgcc_s "

WRAPPER_INCLIB="Y"
while [ -n "$1" ]
do
	WRAPPER_OPTIONS="$WRAPPER_OPTIONS $1"
	if [ "$1" = "-c" -o "$1" = "-E" -o "$1" = "-S" -o "$1" = "-MF" ]
	then
		WRAPPER_INCLIB="N"
	fi
	if [ "$1" = "-static" ]
	then
		WRAPPER_LIBS="-lc -lgcc_s -lgcc_eh"
	fi
	shift
done
if [ "$WRAPPER_INCLIB" = "Y" ]
then
	WRAPPER_OPTIONS="$WRAPPER_OPTIONS -nodefaultlibs $WRAPPER_LIBDIR -luClibc++ $WRAPPER_LIBS"
fi

exec mipsel-openwrt-linux-uclibc-g++ -fno-builtin -nostdinc++ -DGCC_HASCLASSVISIBILITY  $WRAPPER_INCLUDEDIR $WRAPPER_OPTIONS
